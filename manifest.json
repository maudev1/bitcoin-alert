{
    "manifest_version": 2,
    "version": "0.0.1",
    "name": "BitCoin Alert",
    "description": "Extensão de alerta de valor de criptomoedas",
    "author": "Maurício Pedro",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["js/script.js"]
        }
    ],
    "background":{
        "scripts":["js/background.js"]
     },
     "browser_action":{
        "default_icon": "bitcoin.png",
        "default_popup":"popups/index.html",
        "default_title":"BitCoin Alert"
     }
}